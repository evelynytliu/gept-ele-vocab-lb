Â  Â  Â  const leaderboard = await response.json();

Â  Â  Â  // ä¾é¡Œåº«åç¨±åˆ†çµ„
Â  Â  Â  const grouped = {};
Â  Â  Â  leaderboard.forEach(entry => {
